<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.fartans.localme.SignUp.ProfilePhotoPage">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageViewNewProfilePhoto"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:src="@drawable/profile" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewNewProfilePhoto"
                android:layout_alignEnd="@+id/imageViewNewProfilePhoto"
                android:layout_margin="8dp"
                android:src="@drawable/edit" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="1dp">

            <Button
                android:id="@+id/buttonNewUploadImage"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawableStart="@drawable/save"
                android:background="@drawable/styled_button"
                android:paddingLeft="16dp"
                android:text="Upload Image" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>
